        "postcss-nested": "^6.0.1",
        "postcss-preset-env": "^8.3.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    },
    "resolutions": {
        "@babel/traverse": "^7.23.7",
