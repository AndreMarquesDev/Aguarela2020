        "postcss-nested": "^6.0.1",
        "postcss-preset-env": "^8.3.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "resolutions": {
        "ansi-regex": "^5.0.1",
        "browserslist": "^4.21.5",
        "json5": "^2.2.2",
        "lodash": "^4.17.21",
        "minimist": "^1.2.6",
        "minimatch": "^3.0.5",
        "path-parse": "^1.0.7",
        "postcss": "^8.4.14",
        "semver": "^7.5.4",
        "tough-cookie": "^4.1.3",
        "typescript": "^5.1.6",
        "word-wrap": "^1.2.4",
        "xml2js": "^0.5.0"
    }
}
