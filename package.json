{
    "name": "aguarela2020",
    "version": "1.0.0",
    "description": "Aguarela Digital website",
    "main": "index.js",
    "license": "UNLICENSED",
    "scripts": {
        "postinstall": "husky",
        "dev": "next",
        "build": "next build",
        "start": "next start",
        "test": "jest",
        "test:generate:badge": "jest && jest-coverage-badges input src/utils/jest/coverage/coverage-summary.json output src/utils/jest/coverageBadges",
        "lint": "eslint . --ext .js,.ts,.tsx",
        "lint:fix": "yarn lint --fix",
        "type-check": "tsc --noEmit",
        "run:lighthouse:about:mobile": "lhci autorun --config=./lighthouse/lighthouserc.about.mobile.js",
        "run:lighthouse:about:desktop": "lhci autorun --config=./lighthouse/lighthouserc.about.desktop.js",
        "run:lighthouse:contact:mobile": "lhci autorun --config=./lighthouse/lighthouserc.contact.mobile.js",
        "run:lighthouse:contact:desktop": "lhci autorun --config=./lighthouse/lighthouserc.contact.desktop.js",
        "run:lighthouse:homepage:mobile": "lhci autorun --config=./lighthouse/lighthouserc.homepage.mobile.js",
        "run:lighthouse:homepage:desktop": "lhci autorun --config=./lighthouse/lighthouserc.homepage.desktop.js",
        "run:lighthouse:projects:mobile": "lhci autorun --config=./lighthouse/lighthouserc.projects.mobile.js",
        "run:lighthouse:projects:desktop": "lhci autorun --config=./lighthouse/lighthouserc.projects.desktop.js",
        "run:lighthouse:services:mobile": "lhci autorun --config=./lighthouse/lighthouserc.services.mobile.js",
        "run:lighthouse:services:desktop": "lhci autorun --config=./lighthouse/lighthouserc.services.desktop.js",
        "run:lighthouse:all:mobile": "yarn run:lighthouse:about:mobile && yarn run:lighthouse:contact:mobile && yarn run:lighthouse:homepage:mobile && yarn run:lighthouse:projects:mobile && yarn run:lighthouse:services:mobile",
        "run:lighthouse:all:desktop": "yarn run:lighthouse:about:desktop && yarn run:lighthouse:contact:desktop && yarn run:lighthouse:homepage:desktop && yarn run:lighthouse:projects:desktop && yarn run:lighthouse:services:desktop",
        "run:playwright:all": "playwright test --config ./e2e/playwright.config.ts",
        "run:playwright:chrome": "playwright test --config ./e2e/playwright.config.ts --project=chrome",
        "run:playwright:edge": "playwright test --config ./e2e/playwright.config.ts --project=edge",
        "run:playwright:firefox": "playwright test --config ./e2e/playwright.config.ts --project=firefox",
        "run:playwright:safari": "playwright test --config ./e2e/playwright.config.ts --project=webkit",
        "run:playwright:chrome:mobile": "playwright test --config ./e2e/playwright.config.ts --project=chrome-mobile",
        "run:playwright:safari:mobile": "playwright test --config ./e2e/playwright.config.ts --project=safari-mobile",
        "run:playwright:debug": "playwright test --config ./e2e/playwright.config.ts --debug --project=chrome",
        "run:playwright:debug:mobile": "playwright test --config ./e2e/playwright.config.ts --debug --project=chrome-mobile",
        "run:ci-quality-checks": "yarn type-check && yarn lint:fix && yarn test && yarn build"
    },
    "keywords": [],
    "author": "Andr√© Marques <andregm_7@hotmail.com> (andremarquesdev.eu)",
    "engines": {
        "node": ">=20.11.0 <21",
        "yarn": "4.2.2"
    },
    "browserslist": [
        ">0.3%",
        "not ie 11",
        "not dead",
        "not op_mini all"
    ],
    "dependencies": {
        "@vercel/analytics": "^1.3.1",
