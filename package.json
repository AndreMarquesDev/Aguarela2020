{
    "name": "aguarela2020",
    "version": "1.0.0",
    "description": "Aguarela Digital website",
    "main": "index.js",
    "license": "UNLICENSED",
    "scripts": {
        "prepare": "husky install",
        "dev": "next",
        "build": "next build",
        "start": "next start",
        "test": "jest",
        "test:generate:badge": "jest && jest-coverage-badges input utils/jest/coverage/coverage-summary.json output utils/jest/coverageBadges",
        "lint": "tsc --noEmit && eslint . --ext .js,.ts,.tsx && stylelint .",
        "lint:fix": "tsc --noEmit && eslint . --ext .js,.ts,.tsx --fix && stylelint . --fix",
        "run:lighthouse": "lhci autorun --config=./lighthouse/lighthouserc.js",
        "run:lighthouse:ci": "lhci autorun --config=./lighthouse/lighthouserc.ci.js",
        "run:playwright:all": "playwright test --config ./e2e/playwright.config.ts",
        "run:playwright:chrome": "playwright test --config ./e2e/playwright.config.ts --project=chrome",
        "run:playwright:edge": "playwright test --config ./e2e/playwright.config.ts --project=edge",
        "run:playwright:firefox": "playwright test --config ./e2e/playwright.config.ts --project=firefox",
        "run:playwright:safari": "playwright test --config ./e2e/playwright.config.ts --project=webkit",
        "run:playwright:chrome:mobile": "playwright test --config ./e2e/playwright.config.ts --project=chrome-mobile",
        "run:playwright:safari:mobile": "playwright test --config ./e2e/playwright.config.ts --project=safari-mobile",
        "run:playwright:debug": "playwright test --config ./e2e/playwright.config.ts --debug --project=chrome",
        "run:playwright:debug:mobile": "playwright test --config ./e2e/playwright.config.ts --debug --project=chrome-mobile"
    },
    "keywords": [],
    "author": "Andr√© Marques <andregm_7@hotmail.com> (andremarquesdev.com)",
    "engines": {
        "node": ">=16.18.0 <17",
        "yarn": "1"
    },
    "browserslist": [
        ">0.3%",
        "not ie 11",
        "not dead",
        "not op_mini all"
    ],
    "dependencies": {
        "@styled-jsx/plugin-sass": "^4.0.2",
        "axios": "^0.21.1",
        "classnames": "^2.2.6",
        "formik": "^2.2.6",
        "isomorphic-dompurify": "^0.24.0",
        "js-cookie": "^2.2.1",
        "logrocket": "^3.0.1",
        "multilingual-url": "AndreMarquesDev/multilingual-url",
        "next": "^10.0.6",
        "nodemailer": "^6.8.0",
        "nuka-carousel": "^4.7.5",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-icons": "^3.11.0",
        "sass": "^1.56.1",
        "styled-jsx": "^3.3.1",
        "styled-jsx-plugin-postcss": "^3.0.2"
    },
    "devDependencies": {
        "@lhci/cli": "^0.10.0",
        "@playwright/test": "^1.28.1",
        "@testing-library/dom": "^8.1.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/classnames": "^2.2.11",
        "@types/jest": "^26.0.24",
        "@types/node": "^14.14.25",
        "@types/nodemailer-smtp-transport": "^2.7.5",
        "@types/react": "^17.0.1",
        "@types/styled-jsx": "^2.2.8",
        "axios-mock-adapter": "^1.20.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.26.0",
        "eslint-config-andremarquesdev": "^1.3.1",
        "eslint-plugin-playwright": "^0.12.0",
        "husky": "^8.0.1",
        "jest": "^27.0.6",
        "jest-coverage-badges": "^1.1.2",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-preset-env": "^6.7.0",
        "precss": "^4.0.0",
        "start-server-and-test": "^1.14.0",
        "stylelint": "^13.7.2",
        "stylelint-config-recommended-scss": "^4.2.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-scss": "^3.18.0",
        "ts-node": "^10.1.0",
        "typescript": "^4.1.3"
    }
}
