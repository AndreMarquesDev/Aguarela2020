{
    "name": "aguarela2020",
    "version": "1.0.0",
    "description": "Aguarela Digital website",
    "main": "index.js",
    "license": "UNLICENSED",
    "scripts": {
        "prepare": "husky install",
        "dev": "next",
        "build": "next build",
        "start": "next start",
        "test": "jest",
        "test:generate:badge": "jest && jest-coverage-badges input utils/jest/coverage/coverage-summary.json output utils/jest/coverageBadges",
        "lint": "tsc --noEmit && eslint . --ext .js,.ts,.tsx && stylelint .",
        "lint:fix": "tsc --noEmit && eslint . --ext .js,.ts,.tsx --fix && stylelint . --fix",
        "cypress": "cypress open",
        "cypress:chrome": "cypress run --browser chrome --record --tag 'chrome'",
        "cypress:edge": "cypress run --browser edge --record --tag 'edge'",
        "cypress:firefox": "cypress run --browser firefox --record --tag 'firefox'",
        "cypress:chrome:desktop": "cypress run --browser chrome --record --tag 'chrome-desktop' --spec 'cypress/integration/desktop/**/*'",
        "cypress:edge:desktop": "cypress run --browser edge --record --tag 'edge-desktop' --spec 'cypress/integration/desktop/**/*'",
        "cypress:firefox:desktop": "cypress run --browser firefox --record --tag 'firefox-desktop' --spec 'cypress/integration/desktop/**/*'",
        "cypress:chrome:mobile": "cypress run --browser chrome --record --tag 'chrome-mobile' --spec 'cypress/integration/mobile/**/*'",
        "cypress:edge:mobile": "cypress run --browser edge --record --tag 'edge-mobile' --spec 'cypress/integration/mobile/**/*'",
        "cypress:firefox:mobile": "cypress run --browser firefox --record --tag 'firefox-mobile' --spec 'cypress/integration/mobile/**/*'",
        "cypress:chrome:update": "yarn cypress:chrome --env updateSnapshots=true",
        "cypress:edge:update": "yarn cypress:edge --env updateSnapshots=true",
        "cypress:firefox:update": "yarn cypress:firefox --env updateSnapshots=true",
        "cypress:test:chrome": "start-server-and-test start http://localhost:3000 cypress:chrome",
        "cypress:test:edge": "start-server-and-test start http://localhost:3000 cypress:edge",
        "cypress:test:firefox": "start-server-and-test start http://localhost:3000 cypress:firefox",
        "cypress:test:chrome:desktop": "start-server-and-test start http://localhost:3000 cypress:chrome:desktop",
        "cypress:test:edge:desktop": "start-server-and-test start http://localhost:3000 cypress:edge:desktop",
        "cypress:test:firefox:desktop": "start-server-and-test start http://localhost:3000 cypress:firefox:desktop",
        "cypress:test:chrome:mobile": "start-server-and-test start http://localhost:3000 cypress:chrome:mobile",
        "cypress:test:edge:mobile": "start-server-and-test start http://localhost:3000 cypress:edge:mobile",
        "cypress:test:firefox:mobile": "start-server-and-test start http://localhost:3000 cypress:firefox:mobile",
        "cypress:test:chrome:update": "start-server-and-test start http://localhost:3000 cypress:chrome:update",
        "cypress:test:edge:update": "start-server-and-test start http://localhost:3000 cypress:edge:update",
        "cypress:test:firefox:update": "start-server-and-test start http://localhost:3000 cypress:firefox:update",
        "run:lighthouse": "lhci autorun --config=./lighthouse/lighthouserc.js",
        "run:lighthouse:ci": "lhci autorun --config=./lighthouse/lighthouserc.ci.js",
        "run:playwright": "playwright test --config ./e2e/playwright.config.ts",
        "run:playwright:chrome": "playwright test --config ./e2e/playwright.config.ts --project=chrome",
        "run:playwright:debug": "playwright test --config ./e2e/playwright.config.ts --debug --project=chrome",
        "run:playwright:debug:mobile": "playwright test --config ./e2e/playwright.config.ts --debug --project=chrome-mobile"
    },
    "keywords": [],
    "author": "Andr√© Marques <andregm_7@hotmail.com> (andremarquesdev.com)",
    "engines": {
        "node": ">=16.18.0 <17",
        "yarn": "1"
    },
    "browserslist": [
        ">0.3%",
        "not ie 11",
        "not dead",
        "not op_mini all"
    ],
    "dependencies": {
        "@styled-jsx/plugin-sass": "^4.0.2",
        "axios": "^0.21.1",
        "classnames": "^2.2.6",
        "formik": "^2.2.6",
        "isomorphic-dompurify": "^0.24.0",
        "js-cookie": "^2.2.1",
        "logrocket": "^3.0.1",
        "multilingual-url": "AndreMarquesDev/multilingual-url",
        "next": "^10.0.6",
        "nodemailer": "^6.8.0",
        "nuka-carousel": "^4.7.5",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-icons": "^3.11.0",
        "sass": "^1.56.1",
        "styled-jsx": "^3.3.1",
        "styled-jsx-plugin-postcss": "^3.0.2"
    },
    "devDependencies": {
        "@lhci/cli": "^0.10.0",
        "@playwright/test": "^1.28.1",
        "@testing-library/dom": "^8.1.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/classnames": "^2.2.11",
        "@types/jest": "^26.0.24",
        "@types/node": "^14.14.25",
        "@types/nodemailer-smtp-transport": "^2.7.5",
        "@types/react": "^17.0.1",
        "@types/styled-jsx": "^2.2.8",
        "axios-mock-adapter": "^1.20.0",
        "cypress": "^9.2.0",
        "cypress-image-snapshot": "^4.0.1",
        "eslint": "^8.26.0",
        "eslint-config-andremarquesdev": "^1.3.1",
        "eslint-plugin-cypress": "^2.12.1",
        "husky": "^8.0.1",
        "jest": "^27.0.6",
        "jest-coverage-badges": "^1.1.2",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-preset-env": "^6.7.0",
        "precss": "^4.0.0",
        "start-server-and-test": "^1.14.0",
        "stylelint": "^13.7.2",
        "stylelint-config-recommended-scss": "^4.2.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-scss": "^3.18.0",
        "ts-node": "^10.1.0",
        "typescript": "^4.1.3"
    }
}
